{
  "name": "event-board",
  "version": "1.0.0",
  "description": "Event Board - Intern Events Management System",
  "private": true,
  "scripts": {
    "dev": "docker-compose -f docker-compose.yml up",
    "dev:build": "docker-compose -f docker-compose.yml up --build --force-recreate",
    "down": "docker-compose -f docker-compose.yml down",
    "logs": "docker-compose -f docker-compose.yml logs -f",
    "lint": "pnpm -r run lint",
    "type-check": "pnpm -r run type-check",
    "test": "pnpm -r run test",
    "test:watch": "pnpm -r run test:watch"
  },
  "devDependencies": {
    "@jest/types": "^30.2.0",
    "@nestjs/testing": "^10.3.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^6.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.3",
    "jest-environment-jsdom": "^30.2.0",
    "mongodb-memory-server": "^9.2.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}